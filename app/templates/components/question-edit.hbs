{{#if showEditForm}}
  <br><br><br><br>

  <form>
    <div class="form-group">
      <label for="content">Content</label>
      {{input value=content id="content" placeholder=question.content}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" placeholder=question.author}}
    </div>

    <div class="form-group">
      <label for="notes">Notes</label>
      {{input value=notes id="notes" placeholder=question.notes}}
    </div>

    <button {{action 'update' question}}>Submit Changes</button>
  </form>

{{else}}
  <button class="remove-edit" {{action 'showEditForm'}}>Edit</button>
{{/if}}
